

/*FUNCOES DE AGREGACOES NUMERICAS*/

CREATE TABLE VENDEDORES(
	IDVENDEDOR INT PRIMARY KEY AUTO_INCREMENT,
	NOME VARCHAR(30),
	SEXO CHAR(1),
	JANEIRO FLOAT(10, 2),
	FEVEREIRO FLOAT(10, 2),
	MARCO FLOAT(10,2)
);


