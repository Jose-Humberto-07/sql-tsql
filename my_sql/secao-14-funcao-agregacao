INSERT INTO VENDEDORES VALUES(NULL, 'IVONE', 'F', 345345435.34, 34534.56, 534535.76);
INSERT INTO VENDEDORES VALUES(NULL, 'JOAO', 'M', 345435345.34, 3455.56, 534535.76);
